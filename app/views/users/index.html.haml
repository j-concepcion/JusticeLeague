.row
  .col-md-12
    .page-header
      %h1
        Users Index
        = link_to new_user_path, class: "btn btn-primary btn-xs", "data-toggle" => "tooltip", "data-placement" => "top", title: "Add user" do
          %span.glyphicon.glyphicon-plus
.row
  .col-md-10.col-md-offset-1
    .panel.panel-default
      .panel-body
        %table.table.table-condensed.table-hover
          %tr
            %th First Name
            %th Last Name
            %th Email
            %th Roles
            %th Status
            %th

          - @users.each do |user|
            %tr
              %td= user.first_name
              %td= user.last_name
              %td= user.email
              %td= user.civil_status
              %td
                .btn-group.btn-group-xs
                  = link_to user, class: 'btn btn-primary' do
                    %span.glyphicon.glyphicon-eye-open
                    View              
                  %button.btn.btn-primary.dropdown-toggle{'type' => 'button', 'data-toggle' => 'dropdown'}
                    %span.caret
                    %span.sr-only Toggle Dropdown
                  %ul.dropdown-menu{role: 'menu'}
                    %li
                      = link_to edit_user_path(user) do
                        %span.glyphicon.glyphicon-edit
                        Edit
                    %li
                      = link_to user, :method => :delete, :data => { :confirm => 'Are you sure?' } do
                        %span.glyphicon.glyphicon-trash
                        Destroy