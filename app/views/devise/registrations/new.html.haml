.text-center
  .col-xs-6.col-xs-offset-1.col-md-6.col-md-offset-3
    %h1
      %strong Contribute to the Destiny 
      %br/
      %strong Of our country
    %h3
      %strong Exercise your right to vote
    %br/
    .col-md-10.col-md-offset-2.panel.padding.bg-transparent
      = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        %h2 Sign up
        .field
          = f.label :email
          %br/
          = f.email_field :email, autofocus: true
        .field
          = f.label :password
          - if @validatable
            %em
              (#{@minimum_password_length} characters minimum)
          %br/
          = f.password_field :password, autocomplete: "off"
        .field
          = f.label :password_confirmation
          %br/
          = f.password_field :password_confirmation, autocomplete: "off"
          %hr
          .field
          = f.label :national_id_number
          %br/
          = f.password_field :national_id_number

        .actions
          = f.submit "Sign up"
      = render "devise/shared/links"
