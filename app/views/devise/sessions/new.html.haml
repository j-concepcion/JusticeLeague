.centered
  %h1#logo
    Some Voting System
  %br/
  .col-lg-8.col-md-offset-2
    .panel
      .panel-heading.bg-solid
        .panel-title
          %h3 Bumoto
      .panel-body
        = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
          = f.email_field :email, autofocus: true, placeholder: 'Email', class: "inputfield well"
          %br/
          = f.password_field :password, autocomplete: "off", placeholder: 'Password', class: "inputfield well"
          %br/
          .actions
            = f.submit "Log in", class: "btn btn-primary inputfield"
          - if devise_mapping.rememberable?
            .field
              = f.check_box :remember_me
              = f.label :remember_me
        = render "devise/shared/links"
