= form_for @barangay do |f|
  - if @barangay.errors.any?
    #error_explanation
      %h2= "#{pluralize(@barangay.errors.count, "error")} prohibited this barangay from being saved:"
      %ul
        - @barangay.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .actions
    = f.submit 'Save'
