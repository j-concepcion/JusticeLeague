.row
 .col-md-12
  .page-header
   %h1
    Candidates Index

  .panel.panel-default
   .panel-heading Running For President
   .panel-body.bg-transparent
    - @candidates.where(:position=>"President").each do |candidate|
     .col-md-6
      .media
       .media-left.media-top
        = link_to candidate, title: "Show candidate" do
         %img{:class => 'media-object', :src => candidate.avatar, :alt => 'candidate image'}
       .media-body
        %h2.media-heading= candidate.name
        %h3= candidate.position
        %p= candidate.agenda
        %h4 Votes Rendered:
        %p= pluralize(candidate.votes.count, "vote")
        - if (candidate.voted_by == current_user.id)
         %h6 You have voted for this person.
        - elsif (candidate.position == "President")
         %h6
        -else
         %p
          .btn-group.btn-group-xs
           = link_to  upvotes_candidate_path(candidate, :user_id=>current_user.id), class: 'btn btn-primary', method: :post do
            %span.glyphicon.glyphicon-plus
            VOTE

