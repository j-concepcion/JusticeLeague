.row
 .col-md-12
  .page-header
   %h1
    Candidates Index

.row
 - @candidates.each do |candidate|
  .col-md-6
   .media
    .media-left.media-top
     = link_to candidate, title: "Show candidate" do
      %img{:class => 'media-object', :src => candidate.avatar, :alt => 'candidate image'}
    .media-body.bg-transparent
     %h3.media-heading= candidate.name
     %h4= candidate.position
     %p= candidate.agenda
     %p= candidate.votes_rendered
     %p
      .btn-group.btn-group-xs
       = link_to candidate, class: 'btn btn-primary' do
        %span.glyphicon.glyphicon-plus
        VOTE 